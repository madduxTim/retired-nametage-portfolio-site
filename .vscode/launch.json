{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Serve with global http-server",
      "runtimeExecutable": "npx",
      "args": [
        "http-server",
        ".",
        "-p",
        "8080"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "preLaunchTask": "open-browser"
    }
  ]
}